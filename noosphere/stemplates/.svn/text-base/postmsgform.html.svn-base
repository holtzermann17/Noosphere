<center>
	<table width="100%">
	
		<td>

			<form method="post" action="/">
			
			<NS:template spell raw/>
			
			<NS:template preview raw/>

			<!-- input section -->

			<table align="center">
			
				<tr>

				<td colspan="2">

					Subject: <input type="text" name="subject" value="<NS:template subject qhtml/>" size="50" > <br> <br>
					
					<textarea name="body" cols="70" rows="15"><NS:template body/></textarea>

					<br>

				</td>
			</tr>

			<tr>

			<!-- controls -->

				<td align="left">
					<input type="submit" name="preview" value="preview">
		
					<input type="submit" name="spell" value="spellcheck">
					
					<NS:template quote raw/>

				</td>

				<td align="center">
					<input type="submit" name="post" value="post">
				</td>
				
			</table>

			<input type="hidden" name="id" value="<NS:template id qhtml/>">
			
			<input type="hidden" name="replyto" value="<NS:template replyto qhtml/>">
			
			<input type="hidden" name="from" value="<NS:template from qhtml/>">
			
			<input type="hidden" name="op" value="postmsg">

		</form>


		<p />

		<font size="-1">
			Note: Posts are in plain ASCII with whitespace preserved (do not use HTML!).  URLs will be automatically hyperlinked when message is displayed.
		</font>
	
	</td>
	
	</table>
	
</center>
