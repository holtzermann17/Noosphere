#drop_div{
position:absolute;
border: 1px solid #3366CC;
border-bottom-width: 0;
font:normal 12px Verdana;
line-height:18px;
z-index:100;
background-color: #FFFF99;
/*opacity: .40;*/
width: 150px;
}

a.dropdown:hover {
	background-color: #FFFF00;
}

#definition {
	border-bottom: 1px solid black;
	background-color: #FFFF00;
	padding: 1px 5px;
	font-weight: bold;
}

#drop_div a{
	display: block;
	border-bottom: 1px solid black;
	text-decoration: none;
/*	font-weight: bold; */
	padding: 2px 5px;
	color: black;
}

#drop_div a:hover {
	color: black;
	font-weight: bold;
}

a.dropdown {
	display: inline;
}


